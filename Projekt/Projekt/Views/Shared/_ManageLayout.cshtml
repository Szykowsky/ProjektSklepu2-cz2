
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Prototype.css")" rel="stylesheet" />
    @System.Web.Optimization.Styles.Render("~/Content/themes/base/css")
</head>
<body>
    <header>
        <div style="overflow: hidden;">
            <a class="PrzyciskLink" href="@Url.Action("Index", "Home")">Start</a>
            <a class="PrzyciskLink" href="@Url.Action("Index", "Manage")">Profil</a>
            <a class="PrzyciskLink" href="@Url.Action("ListaZamowien", "Manage")">Zamowienia</a>
            @if (User.IsInRole("Admin"))
            {
                <a class="PrzyciskLink" href="@Url.Action("Dodaj","Manage")">Dodaj</a>
            }

            <a id="koszykHeaderLink" href="@Url.Action("Index", "Koszyk")">
                Koszyk (@Html.Action("PobierzIloscElementowKoszyka", "Koszyk"))

            </a>
            <a>

                @Html.Partial("_LoginPartial")

            </a>
            <a id="indexHeaderLogo" href="@Url.Content("~/")">
                <img src="@Url.Content("~/Content/Images/baner.png")" class="center" />
            </a>
        </div>
    </header>

    <div>
        @RenderBody()
    </div>
    <footer>
        <nav>
            <ul>
                <li><a href="@Url.Action("StronyStatyczne" , "Home" , new { nazwa = "Onas" })">O nas</a></li>
                <li><a href="@Url.Action("StronyStatyczne" , "Home" , new { nazwa = "Spolecznosc" })">Społeczność</a></li>
                <li><a href="@Url.Action("StronyStatyczne" , "Home" , new { nazwa = "Opinie" })">Opinie</a></li>
                <li><a href="@Url.Action("StronyStatyczne" , "Home" , new { nazwa = "Pomoc" })">Pomoc</a></li>
                <li><a href="@Url.Action("StronyStatyczne" , "Home" , new { nazwa = "Regulamin" })">Regulamin</a></li>
                <li><a href="@Url.Action("StronyStatyczne" , "Home" , new { nazwa = "Kontakt" })">Kontakt</a></li>
            </ul>
        </nav>
        <div id="footerLogo">
        </div>
        <div id="footerCopyright">
            Copyright &copy; 2018 Sklep
        </div>
    </footer>

    @RenderSection("Scripts", required: false)

</body>
</html>
