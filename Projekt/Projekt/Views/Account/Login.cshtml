@model Projekt.View_Models.LoginViewModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_RightSectionLayout.cshtml";
}

@section SectionTitle
{
    Zaloguj się
}

<div>
    @using (@Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div id="login-error" style="margin-bottom: 10px;">
            @Html.ValidationMessage("loginerror", "")
        </div>

        <table id="login-table" style="margin-left: auto; margin-right: auto; margin-bottom: 10px;">
            <tr>
                <td>@Html.LabelFor(o => o.Email, "E-mail:")</td>
                <td>
                    @Html.TextBoxFor(o => o.Email)
                    <div class="login-validation-message" style="margin-bottom: 10px;">
                        @Html.ValidationMessageFor(o => o.Email)
                    </div>
                </td>
            </tr>
            <tr>
                <td>@Html.LabelFor(o => o.Password, "Hasło:")</td>
                <td>
                    @Html.PasswordFor(o => o.Password)
                    <div class="login-validation-message" style="margin-bottom: 10px;">
                        @Html.ValidationMessageFor(o => o.Password)
                    </div>
                </td>
                <td></td>
            </tr>
            <tr>
                <td colspan="3" style="text-align: center;">
                    <div class="checkbox" style="margin-bottom: 10px;">
                        @Html.CheckBoxFor(m => m.RememberMe, new { @checked = "checked" })
                        @Html.LabelFor(m => m.RememberMe)
                    </div>

                    <input type="submit" value="Zaloguj" class="PrzyciskLink" style="height: 40px;" />
                </td>
            </tr>
        </table>
    }

    <div style="text-align: center; margin-bottom: 10px;">
        <a href="@Url.Action("Register")">Nie mam jeszcze konta</a>
    </div>
</div>


@section Scripts
{
    <script src="~/Scripts/jquery-1.12.4.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
}
